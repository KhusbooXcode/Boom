@page "/account/register"
@using System.ComponentModel.DataAnnotations

@inject NavigationManager NavManager

<a href="../../demo1/dist/index.html" class="mb-12">
    <img alt="Logo" src="4.png" class="h-70px w-150px">
</a>

<div class="w-lg-600px bg-body rounded shadow-sm p-10 p-lg-15 mx-auto">
    <!--begin::Form-->
    <EditForm Model="@model" OnValidSubmit="@OnRegistrationClick" class="form w-100 fv-plugins-bootstrap5 fv-plugins-framework" novalidate="novalidate" id="kt_sign_in_form" action="#">
        <div class="mb-10 text-center">
            <!--begin::Title-->
            <h1 class="text-dark mb-3">Create an Account</h1>
            <!--end::Title-->
            <!--begin::Link-->
            <div class="text-gray-400 fw-bold fs-4">
                Already have an account?
                <a href="/" class="link-primary fw-bolder">Sign in here</a>
            </div>
            <!--end::Link-->
        </div>
        <DataAnnotationsValidator />

        <div class="row fv-row mb-7 fv-plugins-icon-container">
            <!--begin::Col-->
            <div class="col-xl-6">
                <label class="form-label fw-bolder text-dark fs-6">First Name</label>
                <InputText @bind-Value="@model.Firstname" class="form-control form-control-lg form-control-solid" type="text" placeholder="" name="first-name" autocomplete="off" />
                <ValidationMessage For="@(() => model.Firstname)" />
            </div>
            <!--end::Col-->
            <!--begin::Col-->
            <div class="col-xl-6">
                <label class="form-label fw-bolder text-dark fs-6">Last Name</label>
                <InputText @bind-Value="@model.Lastname" class="form-control form-control-lg form-control-solid" type="text" placeholder="" name="last-name" autocomplete="off" />
                <ValidationMessage For="@(() => model.Lastname)" />
            </div>
            <!--end::Col-->
        </div>
        <div class="row fv-row mb-7 fv-plugins-icon-container">
            <!--begin::Col-->
            <div class="col-xl-6">
                <label class="form-label fw-bolder text-dark fs-6">Mobile No.</label>
                <InputText @bind-Value="@model.MobileNo" class="form-control form-control-lg form-control-solid" type="text" placeholder="" name="first-name" autocomplete="off" />
                <ValidationMessage For="@(() => model.MobileNo)" />
            </div>
            <!--end::Col-->
            <!--begin::Col-->
            <div class="col-xl-6">
                <label class="form-label fw-bolder text-dark fs-6">National ID</label>
                <InputText @bind-Value="@model.NationalID" class="form-control form-control-lg form-control-solid" type="text" placeholder="" name="first-name" autocomplete="off" />
                <ValidationMessage For="@(() => model.NationalID)" />
            </div>

            <!--end::Col-->
        </div>
        <div class="mb-10 row fv-row fv-plugins-icon-container" data-kt-password-meter="true">
            <!--begin::Wrapper-->
            <div class="mb-1">
                <!--begin::Label-->
                <label class="form-label fw-bolder text-dark fs-6">Password</label>
                <!--end::Label-->
                <!--begin::Input wrapper-->
                <div class="position-relative mb-3">
                    <InputText @bind-Value="@model.Password" class="form-control form-control-lg form-control-solid" type="password" placeholder="" name="password" autocomplete="off" />
                    <span class="btn btn-sm btn-icon position-absolute translate-middle top-50 end-0 me-n2" data-kt-password-meter-control="visibility">
                        <i class="bi bi-eye-slash fs-2"></i>
                        <i class="bi bi-eye fs-2 d-none"></i>
                    </span>
                </div>
                <!--end::Input wrapper-->
                <!--begin::Meter-->
                <div class="d-flex align-items-center mb-3" data-kt-password-meter-control="highlight">
                    <div class="flex-grow-1 bg-secondary bg-active-success rounded h-5px me-2"></div>
                    <div class="flex-grow-1 bg-secondary bg-active-success rounded h-5px me-2"></div>
                    <div class="flex-grow-1 bg-secondary bg-active-success rounded h-5px me-2"></div>
                    <div class="flex-grow-1 bg-secondary bg-active-success rounded h-5px"></div>
                </div>
                <!--end::Meter-->
            </div>
            <!--end::Wrapper-->
            <!--begin::Hint-->
            <div class="text-muted">Use 8 or more characters with a mix of letters, numbers &amp; symbols.</div>
            <!--end::Hint-->
            <ValidationMessage For="@(() => model.Password)" />
        </div>
        <div class="fv-row mb-5 fv-plugins-icon-container">
            <label class="form-label fw-bolder text-dark fs-6">Confirm Password</label>
            <InputText @bind-Value="@model.ConfirmPassword" class="form-control form-control-lg form-control-solid" type="password" placeholder="" name="confirm-password" autocomplete="off" />
            <ValidationMessage For="@(() => model.ConfirmPassword)" />
        </div>
        <div class=" fv-row mb-7 fv-plugins-icon-container">
            <label class="form-label fw-bolder text-dark fs-6">Email</label>
            <InputText @bind-Value="@model.Email" class="form-control form-control-lg form-control-solid" type="text" placeholder="" name="last-name" autocomplete="off" />
            <ValidationMessage For="@(() => model.Email)" />
        </div>

        <div class="text-center">
            <button type="submit" class="btn btn-lg btn-primary">
                <span class="indicator-label">Register</span>
                <span class="indicator-progress">
                    Please wait...
                    <span class="spinner-border spinner-border-sm align-middle ms-2"></span>
                </span>
            </button>
        </div>

    </EditForm>

</div>


@code{
    public RegistrationModel model = new RegistrationModel();
    public class RegistrationModel
    {
        [Required]
        public string Firstname { get; set; }

        [Required]
        public string Lastname { get; set; }

        [Required]
        public string MobileNo { get; set; }

        [Required]
        public string NationalID { get; set; }


        [EmailAddress]
        public string Email { get; set; }

        [Required]
        public string Password { get; set; }

        [Required]
        public string ConfirmPassword { get; set; }
    }

    void OnRegistrationClick()
    {

        NavManager.NavigateTo("/dashboard", forceLoad: true);

    }
}
